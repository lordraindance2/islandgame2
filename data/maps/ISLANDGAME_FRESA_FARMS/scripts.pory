script ISLANDGAME_FRESA_FARMS_Mareep1 {
    lock
    playmoncry(SPECIES_MAREEP, CRY_MODE_NORMAL)
    msgbox(format("Reeep. (Heh. That dumb dog's snoozing on his job again!)\pReep reep. (Time to sneak out and have some fun with Chansey...)\pReep? (Huh?)"))
    faceplayer
    playse(SE_PIN)
    applymovement(2, Common_Movement_ExclamationMark)
    waitmovement(0)
    msgbox(format("Reep... (Oh, it's just a random kid. Good thing they can't understand me.)\pReep! (Go away! I've got big plans for tonight!)\pReep. (Oh wait... They don't understand me.)"))
    applymovement(2, Common_Movement_FaceOriginalDirection)
    waitmovement(0)
    release
}

