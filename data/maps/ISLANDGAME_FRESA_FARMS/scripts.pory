script ISLANDGAME_FRESA_FARMS_Mareep3 {
    lock
    faceplayer
    playmoncry(SPECIES_MAREEP, CRY_MODE_NORMAL)
    if(!flag(FLAG_FRESA_FARMS_MAREEP_GIFT)) {
        msgbox(format("Reep! (Hey there! Thanks for saving my butt from that scary Mightyena.)\pReep. (Please take this as a gift.)"))
        checkitemspace(ITEM_ELECTRIC_GEM)
        if(!var(VAR_RESULT)) {
            msgbox(format("Reep. (Oh, you don't have enough space for this.)"))
        }
        else {
            setflag(FLAG_FRESA_FARMS_MAREEP_GIFT)
            giveitem(ITEM_ELECTRIC_GEM)
        }
    }
    else {
        msgbox(format("Reep. (I found it wandering around today. Hope it helps you out!)"))

    }
    release
}

