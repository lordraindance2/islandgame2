/// scout vendors 

script ISLANDGAME_CAMP_PERSI_OUTSIDE_EventScript_CookieGirl {
    lock
    faceplayer
    showmoneybox(0,0)
    msgbox(ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlTalk1, MSGBOX_YESNO)
    goto_if_eq(VAR_RESULT, NO, ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlDecline)
    checkmoney(250)
    goto_if_eq(VAR_RESULT, FALSE, ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlBroke)
    checkitemspace(ITEM_LAVA_COOKIE)
    goto_if_eq(VAR_RESULT, TRUE, ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlPay)
    goto_if_eq(VAR_RESULT, FALSE, ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlBagFull)
    hidemoneybox
    release
}

text ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlTalk1 {
    format(
        "{COLOR DARK_GRAY}Hi there! I'm selling delicious Lava Cookies to support Troop 115. \p"
        "{COLOR DARK_GRAY}Would you like to buy one for ¥250?"
        )
}

script ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlDecline {
    msgbox(format("{COLOR DARK_GRAY}Eeeh? But I said they were delicious..."))
    hidemoneybox
    release
}

script ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlBroke {
    msgbox(format("{COLOR DARK_GRAY}Eeeh? You don't have enough money? Phooey..."))
    hidemoneybox
    release
}

script ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlPay {
    msgbox(format("{COLOR DARK_GRAY}Yay! Thank you for your support!"))
    removemoney(250)
    updatemoneybox
    giveitem(ITEM_LAVA_COOKIE)
    hidemoneybox
    release 
}

script ISLANDGAME_CAMP_PERSI_OUTSIDE_CookieGirlBagFull {
    msgbox(format("{COLOR DARK_GRAY}Eeeh? You don't have enough room for this cookie?"))
    hidemoneybox
    release
}

